{
  "name": "waveline",
  "version": "0.0.1",
  "author": "Wellenline OU",
  "description": "Waveline - Self hosted music streaming player",
  "main": "main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --configuration=production --aot --sourceMap=false",
    "build:electron": "ng build --configuration=production --aot --sourceMap=false --base-href --base-href ./",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "electron:serve-tsc": "tsc -p tsconfig-serve.json",
    "electron:serve": "wait-on http-get://localhost:4200/ && npm run electron:serve-tsc && electron . --serve",
    "electron:local": "npm run build:electron && electron .",
    "electron:linux": "npm run build:electron && electron-builder build --linux",
    "electron:windows": "npm run build:electron && electron-builder build --windows",
    "electron:mac": "npm run build:electron && electron-builder build --mac"
  },
  "build": {
    "asar": true,
    "appId": "app.waveline",
    "productName": "Waveline",
    "directories": {
      "output": "release",
      "buildResources": "electron/buildResources"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json",
      "main.js"
    ],
    "mac": {
      "icon": "./icons/mac/icon.icns",
      "category": "public.app-category.music"
    },
    "win": {
      "icon": "./icons/png/256x256.png"
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~10.2.2",
    "@angular/common": "~10.2.2",
    "@angular/compiler": "~10.2.2",
    "@angular/core": "~10.2.2",
    "@angular/forms": "~10.2.2",
    "@angular/platform-browser": "~10.2.2",
    "@angular/platform-browser-dynamic": "~10.2.2",
    "@angular/router": "~10.2.2",
    "@angular/service-worker": "~10.2.2",
    "ng-lazyload-image": "^7.1.0",
    "qrcode": "^1.4.4",
    "rxjs": "~6.5.4",
    "tslib": "^2.0.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1002.0",
    "@angular/cli": "~10.2.0",
    "@angular/compiler-cli": "~10.2.2",
    "@angular/language-service": "~10.2.2",
    "@types/jasmine": "~3.5.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.11.1",
    "@types/qrcode": "^1.3.4",
    "codelyzer": "^5.1.2",
    "electron": "8.2.4",
    "electron-builder": "22.3.2",
    "electron-reload": "1.5.0",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~5.0.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "npm-run-all": "4.1.5",
    "protractor": "~7.0.0",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typescript": "~4.0.5",
    "wait-on": "4.0.0"
  }
}
